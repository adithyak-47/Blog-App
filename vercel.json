{
    "version": 2,
    "builds": [
      {
        "src": "client/package.json",
        "use": "@vercel/static-build"
      },
      {
        "src": "server/package.json",
        "use": "@vercel/node"
      }
    ],
    "routes": [
      {
        "src": "/api/(.*)",
        "dest": "/server/$1"
      },
      {
        "src": "/(.*)",
        "dest": "/client/$1"
      }
    ],
    "rewrites": [
      {
        "source": "/api/(.*)",
        "destination": "/server/$1"
      }
    ],
    "env": {
      "MONGODB_URL": "@server:MONGODB_URL",
      "SECRET_KEY": "@server:SECRET_KEY"
    }
  }
  
  
  